@model DataAccess.Models.Page

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Page</h4>
<hr />


        <div class="col-lg-12">


            <div class="card shadow mb-4">
               

                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-12">
                                <form asp-action="Edit">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="PageId" />
                                    <div class="form-group">
                                        <label asp-for="PageTitle" class="control-label"></label>
                                        <input asp-for="PageTitle" class="form-control" />
                                        <span asp-validation-for="PageTitle" class="text-danger"></span>
                                    </div>

                                    <div class="form-group row">
                                        <label asp-for="PageStatus" class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <select id="first" asp-for="PageStatus" class="form-control">
                                                <option selected disabled>-- select Page Status--</option>
                                                <option value="@DataAccess.Models.Status.Active.ToString()">@DataAccess.Models.Status.Active.ToString()</option>
                                                <option value="@DataAccess.Models.Status.Inactive.ToString()">@DataAccess.Models.Status.Inactive.ToString()</option>
                                            </select>
                                            <span asp-validation-for="PageStatus" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row" id="typingArea">
                                        <label asp-for="Content" class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <textarea id="text" asp-for="Content" class="form-control" rows="10"></textarea>
                                            <span asp-validation-for="Content" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div>
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
       

<script>
    $().ready(function() {
        $('textarea').tinymce({
            //script_url : '../js/tinymce/jscripts/tiny_mce/tiny_mce.js',

        });
    });
</script>
  
